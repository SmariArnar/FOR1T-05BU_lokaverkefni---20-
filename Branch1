
# Smári Arnarson og Friðrik fannar
# Lokaverkefni í öðrum áfanga forritun

# importum hér random breytu.
import time
from random import *
from random import shuffle

teljari = 1
# Hér bý ég til lista með hrútapsilunum sem ég appenda í, frá texta möppunum.
hrutalisti = []
# Hér er listi sem inniheldur spil bæði frá,
tolva = []
notandi = []
leikur = []
valTölvu = 0
# Áður en ég byrja á að gera þetta bý ég til texta möppu sem inniheldur
# hrútaspilin. Með þessari skipun fyrir neðan opna ég skjalið
# svo þarf ég að ákveða hvað það á að gera við það.
with open("hrutaspil.txt", "r", encoding="utf-8") as f:
    for line in f:
        # Hér set ég listann úr texta skjalinu í lista ti að nota
        # hann í framtíðinni og nota hann til að spila leikinn.
        hrutalisti.append(eval(line))
# Spilin eru í fyrirframákveðinniröð því þurfum við að
# stokka upp í honum við getum gert þetta á einfaldan hátt,
# með shuffle skipuninni sem ruglar stokkinn.
shuffle(hrutalisti)
# Hér skipti ég listanum í tvo lista, eða tvær hendur
# til að nota þær og þær eru ruglaðar
tolva.append(hrutalisti[:26])
notandi.append(hrutalisti[26:])
# Hér bý ég til while lykkju sem mun keyra þangað til að annaðhvort hefur
# tapað öllum spilunum sínum, endurtekur alltaf leikröðina þangað til leikurinn klárast.
while len(notandi[0])==0 or len(tolva[0]):
    # Það eru tvær gerðir af skipunum sem við viljum gera í þessu spili
    # Fá hann til að velja hvað hann vill keppa í og svo hve úrslitin voru sem overlappast sitt á hvað
    teljari += 1
    if teljari % 2 == 0:
        ordabok = notandi[0]
        #Ég nota teljara og þennan kóða með honum til að meta í hvaða if/elif setningar hann á að keyra hverju sinni.
        # Hér bý ég til nýjan lista sem ordabok, til að hafa listana hagnýtari og nothæfari.
        # Svo prenta ég út einkenni hrútsins svo hann velur hvað hann heldur mun vinna
        print("Veldu í hverju þú vilt keppa!")
        print("Þú ert með hrútinn ", ordabok[0].keys())
        print("1.Þyngd hrútsins þíns er ", list(ordabok[0].values())[0][0])
        print("2.Mjólkur tala hrútsins þíns  ", list(ordabok[0].values())[0][1])
        print("3.Ulliar talan á hrútnum er ", list(ordabok[0].values())[0][2])
        print("4.Fjöldi afkvæmi hrútsins ", list(ordabok[0].values())[0][3])
        print("5.Læri hrútsins er með töluna ", list(ordabok[0].values())[0][4])
        print("6.Frjósemis tala hrútsins er ", list(ordabok[0].values())[0][5])
        print("7.Bakvöðva tala hrútsins er ", list(ordabok[0].values())[0][6])
        print("8.Stig malar hrútsins ", list(ordabok[0].values())[0][7])
        val = int(input("Sláðu inn í hverju þú vilt láta hrútinn þinn keppa"))
    if teljari % 2 == 1:
        # Nú er ég kominn með það sem notandin vill keppa í
        # Nú þarf ég að finna hvað tölvan ætlar að spila um.
        ordabok2 = notandi[0]
        print("Tölvan er með hrútinn", ordabok2[0].keys())
        print("-----------------------------------------")
        print("Bíddu rólegur, tölvan er núna að velja sér eiginleika fyrir næstu umferð.")
        time.sleep(2)
        # Hér geri ég bara random á það hvað talvan velur sér, bý svo til elif sagnir úr
        # því hvaða random tala var valinn.
        valtölvu = randint(1, 8)
    if val != 0 and val <= 8:
        #Hér fer ég í gegnum orðabókina og vel úr henni það sem spilendurnir ætla að nota,
        #með því sem slegið er inn set ég inn til að finna hvaða value jafnar því.
        for key, value in ordabok[0].items():
            print("Notandi er með hrútinn", key)
            print(key, "er með", value[val - 1])
            leikur.append(ordabok[0])
        for key, value in ordabok2[0].items():
            print("tölvan er með hrútinn", key)
            print(key, "er með", value[val - 1])
            # Hér nota ég tagið flokkur-1 því að values eru frá 1 - 7 og flokkur er frá 1 - 8
            # Þannig í staðinn fyrir að harðkóða þetta eða "Ljótkóða",þá nota ég þetta bara einfaldlega svona
        if ordabok[0].values()[0][val] > ordabok2[0].values()[0][val]:
                print("Tölvan vann þessa umferð, þú tapaðir hrútnum þínum")
                ordabok2.append(ordabok[0])
        elif ordabok[0].values()[0][val] < ordabok2[0].values()[0][val]:
                print("Þú vannst þessa umferð og fékkst hrút tölvunnar.")
                ordabok2.append(ordabok[0])












