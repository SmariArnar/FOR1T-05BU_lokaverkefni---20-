#Smári Arnarson og Friðrik fannar
#Lokaverkefni í öðrum áfanga forritun
#importum hér random breytu.
import time
from random import *
from random import shuffle

teljari = 1
#Hér bý ég til lista með hrútapsilunum sem ég appenda í, frá texta möppunum.
hrutalisti = []
#Hér er listi sem inniheldur spil bæði frá,
tolva = []
notandi = []
#Áður en ég byrja á að gera þetta bý ég til texta möppu sem inniheldur
#hrútaspilin. Með þessari skipun fyrir neðan opna ég skjalið
#svo þarf ég að ákveða hvað það á að gera við það.
with open("hrutaspil.txt","r", encoding="utf-8") as f:
    for line in f:
        #Hér set ég listann úr texta skjalinu í lista ti að nota
        #hann í framtíðinni og nota hann til að spila leikinn.
        hrutalisti.append(eval(line))
#Spilin eru í fyrirframákveðinniröð því þurfum við að
#stokka upp í honum við getum gert þetta á einfaldan hátt,
#með shuffle skipuninni sem ruglar stokkinn.
shuffle(hrutalisti)
#Hér skipti ég listanum í tvo lista, eða tvær hendur
#til að nota þær og þær eru ruglaðar
#Ég nota engan smið fyrir valuein á dictinu þetta er einfaldara í notkun en heill klasi.
tolva.append(hrutalisti[:26])
notandi.append(hrutalisti[26:])
print(tolva)
print(notandi)
#Hér bý ég til while lykkju sem mun keyra þangað til að annaðhvort hefur
#tapað öllum spilunum sínum, endurtekur alltaf leikröðina þangað til leikurinn klárast.
while len(tolva) or len(notandi) > 0:
    #hér nota ég teljara sem fer sitt á hvað að velja flokk á notanda í tölvu,
    #það sem kemur út úr þessum tveimur if setningum heitir bæði val,
    #því flokkurinn sem er valinn fara bæði í sama proccess er þau eru valinn
    #það er að ákvarða hvaða hrútur vinnur, svo heldur þetta áfram og áfram í while lykkjunni þar til annar er búinn að tapaþ
    teljari += 1
    if teljari%2 == 0:
        ordabok = notandi[0]
        #Hér bý ég til nýjan lista sem ordabok, til að hafa listana hagnýtari og nothæfa.
        #Svo prenta ég út einkenni hrútsins svo hann velur hvað hann heldur mun vinna
        print("Veldu í hverju þú vilt keppa!")
        print("Þú ert með hrútinn ", ordabok[0].keys())
        print("0.Þyngd hrútsins þíns er ",list(ordabok[0].values())[0][0])
        print("1.Mjólkur tala hrútsins þíns  ",list(ordabok[0].values())[0][1])
        print("2.Ulliar talan á hrútnum er ",list(ordabok[0].values())[0][2])
        print("3.Fjöldi afkvæmi hrútsins ",list(ordabok[0].values())[0][3])
        print("4.Læri hrútsins er með töluna ",list(ordabok[0].values())[0][4])
        print("5.Frjósemis tala hrútsins er ",list(ordabok[0].values())[0][5])
        print("6.Bakvöðva tala hrútsins er ",list(ordabok[0].values())[0][6])
        print("7.Stig malar hrútsins ",list(ordabok[0].values())[0][7])
        val = int(input("Sláðu inn í hverju þú vilt láta hrútinn þinn keppa"))
    if teljari%2 == 1:
        #nú í annari loopu fær tölvan að velja(random), hvað hún vill keppa í.
        print(ordabok2)
        ordabok2 = tolva[0]
        print("Tölvan er með hrútinn", ordabok2[0].keys())
        time.sleep(0.5)
        print("-----------------------------------------")
        print("Bíddu rólegur, tölvan er núna að velja sér eiginleika.")
        time.sleep(2)
        #Hér geri ég bara random á það hvað talvan velur sér, bý svo til elif sagnir úr
        #því hvaða random tala var valinn.
        val = randint(1,6)
    if val != 0 and val <= 8:
        ordabok = notandi[0]
        ordabok2 = tolva[0]
        print("")
        if list(ordabok[0].values())[0][val] > list(ordabok2[0].values())[0][val]:
            #hér er lína sem skilgreinir hvort value er hærra og það skilgreinir hver vinnur0
            print('\x1b[1;31m' + 'Þú vinnur þessa umferð!' + '\x1b[0m')
            print("  _     __       _                   _ ")
            time.sleep(0.05)
            print(" | |_ _/_/  __ _(_)_ _  _ _ _  _ _ _| |")
            time.sleep(0.05)
            print(" | -_) || | \ V / | ' \| ' \ || | '_|_|")
            time.sleep(0.05)
            print(" |_|  \_,_|  \_/|_|_||_|_||_\_,_|_| (_)\n")
            time.sleep(2)
            ordabok.append(ordabok.pop(0))
            ordabok.append(tolva.pop(0))
        elif list(ordabok[0].values())[0][val] < list(ordabok2[0].values())[0][val]:
            print("Tölvan vann þessa umferð")
            print("  _____ _   _ _                     _                   _ ")
            time.sleep(0.05)
            print(" |_   _(_)_(_) |_ ____ _ _ _   __ _(_)_ _  _ _ _  _ _ _| |")
            time.sleep(0.05)
            print("   | |  / _ \| \ V / _` | ' \  \ V / | ' \| ' \ || | '_|_|")
            time.sleep(0.05)
            print("   |_|  \___/|_|\_/\__,_|_||_|  \_/|_|_||_|_||_\_,_|_| (_)\n")
            time.sleep(2)
            ordabok2.append(ordabok.pop(0))
            ordabok2.append(tolva.pop(0))
        elif list(ordabok[0].values())[0][val] == list(ordabok2[0].values())[0][val]:
            print("Úpsídeisí, jafntefli, spilið aftur.")
    else:
        print("úps, villa. Veldu á milli 0 og 7 ekki hærra eða lægra.")
        print("Spilastokkur þinn er með",len(notandi[0]),"spil.")
        print("Spilastokkur tölvunnar er með",len(tolva[0]),"spil")

    if len(ordabok[0]) == 0:
        print("Þú hefur tapað öllum þínum spilum og þarafleiðandi tapað spilinu.")
        print("Tölvan er með",len(ordabok2[0]),"spil.")

    elif len(ordabok2[0]) == 0:
        print("Tölvan hefur tapað öllum sínum spilum og þú hefur unnið hana")
        print("Þú endar með",len(ordabok[0]),"spil.")













